{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "../iffcargo/server",
        "baseUrl": ".",
        "allowJs": true,
        "lib": [
            "es6",
            "es2015",
            "es2017",
            "dom"
        ],
        "types": [
            "node"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "../server/**/*"
    ]
}

