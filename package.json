{
  "name": "iff",
  "version": "0.0.1",
  "type": "commonjs",
  "scripts": {
    "start": "cd iffcargo/server && node server.js",
    "start-prod": "cd server && pm2 start server.js --name iffcargo",
    "client": "ng serve --open --port 4300",
    "build-client": "rm -rf iffcargo/ui && ng build --configuration production --aot",
    "build-server": "rm -rf iffcargo/server && cd server && tsc",
    "build": "npm run build-client && npm run build-server",
    "lint": "ng lint",
    "watch": "rm -rf iffcargo/server && cd server && tsc -w"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "private": true,
  "dependencies": {
    "axios": "^0.24.0",
    "body-parser": "^1.19.1",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "ts-mailgun": "^0.5.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular/animations": "^15.0.4",
    "@angular/cli": "^15.0.4",
    "@angular/common": "^15.0.4",
    "@angular/compiler": "^15.0.4",
    "@angular/compiler-cli": "^15.0.4",
    "@angular/core": "^15.0.4",
    "@angular/forms": "^15.0.4",
    "@angular/platform-browser": "^15.0.4",
    "@angular/platform-browser-dynamic": "^15.0.4",
    "@angular/platform-server": "^15.0.4",
    "@angular/router": "^15.0.4",
    "@ng-bootstrap/ng-bootstrap": "^14.0.0",
    "@types/express": "^4.17.9",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~5.0.0",
    "jquery": "^3.5.1",
    "karma": "~6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-recaptcha": "^11.0.0",
    "protractor": "~7.0.0",
    "rxjs": "~6.6.0",
    "ts-node": "~8.3.0",
    "ts-node-dev": "^1.1.1",
    "tslib": "^2.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.8.4",
    "zone.js": "~0.11.4"
  }
}
